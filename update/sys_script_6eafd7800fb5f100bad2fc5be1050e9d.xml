        <script><![CDATA[function onAsync(current) {
	var authenticator = new RightScaleAuthenticator();
	var helper = new RightScaleHelper();
	var hash = authenticator.refreshAccessToken(current);
	//Hash with error: {"error":"invalid_grant","error_description":"Invalid grant"}
	if (hash.error) {
		gs.error("Account registration error occurred while getting AccessToken: " + hash.error_description);
	} else {
		var access_token = hash.access_token;
		current.u_access_token = access_token;
		current.u_expires_in = hash.expires_in;
		current.refreshed_at = new GlideDateTime();
		
		var account = new RightScaleResource();
		var accountHash = account.getRSAccount(current);
		current.u_links = accountHash.links;
		current.u_name = accountHash.name;
		current.update();
		gs.info("Account " + current.u_id + " successfully registered!");
	}
}]]></script>
